<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Base DAO -->
    <bean id="baseDao" abstract="true">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- DAO -->
    <bean id="permissionDao" class="com.xmomen.mos.module.account.dao.PermissionDaoImpl" parent="baseDao"/>
    <bean id="roleDao" class="com.xmomen.mos.module.account.dao.RoleDaoImpl" parent="baseDao"/>
    <bean id="userDao" class="com.xmomen.mos.module.account.dao.UserDaoImpl" parent="baseDao"/>

    <!-- Service -->
    <bean id="permissionService" class="com.xmomen.mos.module.account.service.PermissionServiceImpl">
        <property name="permissionDao" ref="permissionDao"/>
    </bean>

    <bean id="roleService" class="com.xmomen.mos.module.account.service.RoleServiceImpl">
        <property name="roleDao" ref="roleDao"/>
    </bean>

    <bean id="passwordHelper" class="com.xmomen.mos.module.account.service.PasswordHelper">
        <property name="algorithmName" value="md5"/>
        <property name="hashIterations" value="2"/>
    </bean>

    <bean id="userService" class="com.xmomen.mos.module.account.service.UserServiceImpl">
        <property name="passwordHelper" ref="passwordHelper"/>
    </bean>


</beans>